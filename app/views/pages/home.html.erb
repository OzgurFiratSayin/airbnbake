<%= content_for(:navbar_home, "navbar-home") %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1559553156-2e97137af16f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2773&q=80);">
  <div class="container">
  <div class="d-flex container flex-column align-items-center">
    <h1>If there’s a cake for every ocasion, we’ve got it.</h1>
    <div class="search-form">
      <%= simple_form_for :search, url: search_page_path, method: "GET", html: { class: 'form-inline' } do |f| %>
      <%= f.input :search, input_html: {placeholder: "Find the perfect cake"}, class: 'form-style' %>
      <%= f.submit "Search", class: "btn btn-ghost" %>
      <% end %>
    </div>

  </div>
</div>

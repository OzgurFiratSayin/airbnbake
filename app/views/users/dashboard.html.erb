<div class="container">
  <div><h1>Your Dashboard</h1></div>

  <div class="lists-display">
    <div class="order-list">
      <h2>Your Order List</h2>
      <ul>
        <% @orders.each do |order| %>
        <div class="card-order">
          <div>
             <h3><%= order.cake.name %></h3>
             <%#= cl_image_tag order.cake.photo.key, height: 80, width: 80, crop: :fill, class: 'cake-photo' %>
            <h4>Order date:</h4>
            <p><%= order.order_date %></p>
              <h4>Total: </h4>
              <p>GBP <%= order.cake.price %></p>
            <% if @user.reviews.any? %>
              <p>edit review</p>
            <% else %>
               <%= link_to 'Review', new_order_review_path(order) %>
            <% end %>
          </div>
        </div>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="order-list">
    <div class="cake-list">
      <h2>Your Cakes</h2>
      <ul>
        <% @cakes.each do |cake| %>
        <div class="card-order">
          <li>
            <%= link_to cake.name, cake_path(cake) %> -  Edit btn - delete btn
          </li>
        </div>
        <% end %>
      </ul>
    </div>

  </div>
</div>

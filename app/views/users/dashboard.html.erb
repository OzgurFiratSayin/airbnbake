<div class="container">
  <div><h1>Your Dashboard</h1></div>

  <div class="lists-display">
    <div class="order-list">
      <h2>Your Order List</h2>
      <ul>
        <% @orders.each do |order| %>
        <div class="card-order">
          <li>
            Order ID: <%= order.id %>- Order date: <%= order.order_date %> - Cake Name: <%= order.cake.name %> - Total: GBP <%= order.cake.price %>
            <% if @user.reviews.any? %>
              <p>edit review</p>
            <% else %>
               <%= link_to 'Review', new_order_review_path(order) %>
            <% end %>
          </li>
        </div>
        <% end %>
      </ul>
    </div>
    <div class="cake-list">
      <h2>Your Cakes</h2>
      <ul>
        <% @cakes.each do |cake| %>
        <div class="card-order">
          <li>
            <%= link_to cake.name, cake_path(cake) %> -  Edit btn - delete btn
          </li>
        </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>

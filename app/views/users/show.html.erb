
<div class="container ">
  <div id="card-user">
    <div id="user-info">
      <h4> <%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %> </h4>
      <p> <%= @user.address %> </p>
    </div>
    <div id="user-photo">
      <% if @user.photo.attachment %>
        <% avatar_source = cl_image_path(@user.photo.key, options = {width: 150, height: 150, crop: :thumb, gravity: :face}) %>
        <img src="<%= avatar_source %>">
      <% else %>
        <%= image_tag "default_avatar.jpg" %>
      <% end %>
    </div>
  </div>
  <h1>Cakes available from <%= @user.first_name %> <%= @user.last_name %> </h1>
  <div class="container">
    <% @user.cakes.each do |cake| %>
      <div class="card d-inline-flex align-items-center">
       <h3 class="mt-2"><%= link_to cake.name, cake_path(cake) %></h3>
       <% cl_image_tag cake.photos.first.key, class: 'cake-img' %>
       <div class="ml-3 mr-3 mt-2">
        <%= cake.description %>
        <%= cake.size %>
       </div>
       <div class="cake-price">
        <p>Â£ <%= cake.price %></p>
       </div>
      </div>
    <% end %>
  </div>
</div>

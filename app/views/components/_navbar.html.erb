<div class="navbar navbar-expand-sm navbar-trasparent navbar-lewagon <%= yield(:navbar_home) %>">
  <a class="navbar-brand" href="#">
    <%= image_tag('Frame.png') %>
</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active mt-2 mr-2">
          Hello, <strong><%= current_user.first_name.capitalize %></strong>
        </li>
      <% else %>
          <%= link_to 'Sign up',  new_user_registration_path, :class => "btn btn-ghost"%>
          <%= link_to 'Sign in',  new_user_session_path, :class => "btn btn-ghost"%>
      <% end %>
      <li class="nav-item dropdown">
        <% if user_signed_in? %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/annedj" />
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to 'Sell Cake', new_cake_path, class: "dropdown-item" %>
          <a class="dropdown-item" href="#">Settings</a>
          <%= link_to 'Dashboard', dashboard_path, class: "dropdown-item" %>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

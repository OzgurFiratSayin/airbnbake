<div class="navbar navbar-expand-sm navbar-trasparent navbar-lewagon <%= yield(:navbar_home) %>">
  <a class="navbar-brand" href="#">
    <%= image_tag('flame-cake') %>
</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= current_user.first_name %>
        </li>
      <% end %>
      <li class="nav-item dropdown">
        <% if user_signed_in? %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/annedj" />
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">View Orders</a>
          <a class="dropdown-item" href="#">Settings</a>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
        </div>
      </li>
    </ul>
  </div>
</div>
